{
  "name": "nixilla/cqrs-bundle",
  "type": "symfony-bundle",
  "description": "Symfony Bundle that integrates Prooph CQRS/ES library",
  "keywords": [
    "cqrs",
    "event-sourcing",
    "symfony-bundle",
    "prooph"
  ],
  "homepage": "https://github.com/nixilla/cqrs-bundle",
  "license": "MIT",
  "authors": [
    {
      "name": "Janusz Slota",
      "email": "janusz.slota@nixilla.com"
    }
  ],
  "require": {
    "php": ">=5.6",
    "alcaeus/mongo-php-adapter": "^1.0",
    "prooph/event-sourcing": "^4.0",
    "prooph/event-store": "^6.5",
    "prooph/event-store-bus-bridge": "^2.0",
    "prooph/event-store-mongodb-adapter": "^2.4",
    "prooph/service-bus": "^5.2",
    "symfony/framework-bundle": "~2.3|~3",
    "symfony/serializer": "~2.3|~3"
  },
  "require-dev": {
    "phpspec/phpspec": "^3",
    "satooshi/php-coveralls": "^1.0",
    "henrikbjorn/phpspec-code-coverage": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Nixilla\\CqrsBundle\\": "src/"
    }
  },
  "config": {
    "bin-dir": "bin"
  }
}
